<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlunoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtnomealuno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Informe seu nome "
            android:ems="10"
            android:inputType="textPersonName"/>


        <EditText
            android:id="@+id/txtnota1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Informe nota 1"
            android:ems="10"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/txtnota2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Informe nota 2"
            android:ems="10"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/txtnota3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Informe nota 3"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/txtaddaluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Adicionaraluno"
            android:text="Adicionar" />

        <ListView
            android:id="@+id/listViewAluno"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>